<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <!-- Parent style for text of all sorts -->
    <style name="text">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
    </style>

    <!-- Subset of text for bank/income -->
    <style name="text.large" parent="style/text">
        <item name="android:textSize">30dp</item>
    </style>

    <!-- Subset of text for row labels -->
    <style name="text.label" parent="style/text">
        <item name="android:layout_gravity">right</item>
    </style>

    <!-- Subset of text for row data -->
    <style name="text.data" parent="style/text">
        <item name="android:layout_gravity">left</item>
        <item name="android:paddingLeft">4dp</item>
    </style>

</resources>